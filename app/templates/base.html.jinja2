<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    {% if title %}
    <title>{{ title }}</title>
    {% else %}
    <title>Default title</title>
    {% endif %}
</head>
<body>
    <div>
        <span>Microblog:&nbsp;</span>
        <a href="/index">Home</a>
        {% if g.user.is_authenticated %}
        &nbsp;|&nbsp;<a href="{{ url_for('user', nickname=g.user.nickname) }}">Profile</a>
        &nbsp;|&nbsp;<a href="{{ url_for('logout') }}">Logout</a>
        {% endif %}
    </div>
    <hr />
    {% with messages = get_flashed_messages() %}
        {% if messages %}
            <ul>
            {% for message in messages %}
                <li><span style="color: green;">{{ message }}</span></li>
            {% endfor %}
            </ul>
        {% endif %}
    {% endwith %}
    {% block content %}{% endblock %}
</body>
</html>
